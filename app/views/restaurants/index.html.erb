<h1>Restaurants</h1>

<div class="container">
  <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary my-3" %>

  <% @restaurants.each do |restaurant| %>
  <div class="card">
    <h2><%= restaurant.name %></h2>
    <p><%= restaurant.address %></p>
    <p><%= restaurant.phone_number %></p>
    <p><%= restaurant.category %></p>
  </div>
  <% end %>
</div>
