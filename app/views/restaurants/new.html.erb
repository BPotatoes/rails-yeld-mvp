<h1>Add a new Restaurant</h1>

<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category,as: :select, collection: Restaurant::CATEGORY %>
    <%= f.button :submit, "Add a new Restaurant", class: "btn btn-primary" %>
  <% end %>
</div>
